{
  "manifest_version": 2,
  "name": "Hello World Extension",
  "version": "1.0",
  "description": "Displays Hello, World! when clicked.",
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "48": "icon.png"
  },
  "permissions": ["activeTab"]
}
